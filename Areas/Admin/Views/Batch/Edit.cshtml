@model BatchViewModel

@{
    ViewData["Title"] = "Edit Batch";
}

<div class="main-content">
    <div class="row py-3">
        <div class="col-6">
            <h2>Edit Batch</h2>
        </div>
    </div>
    <form method="post" asp-action="Edit" id="batchForm">
        <input type="hidden" asp-for="Id" />

        <div class="mb-3">
            <label class="form-label">Course</label>
            <select class="form-control" asp-for="CourseId" asp-items="@(new SelectList(Model.Courses, "CourseId", "CourseName"))">
                <option value="">-- Select Course --</option>
            </select>
            <span class="text-danger" asp-validation-for="CourseId"></span>
        </div>

        <div class="mb-3">
            <label class="form-label">Semester</label>
            <input type="text" class="form-control" asp-for="Semester" id="semester" />
            <span class="text-danger" asp-validation-for="Semester"></span>
        </div>

        <div class="mb-3">
            <label class="form-label">Class Name</label>
            <input type="text" class="form-control" asp-for="ClassNames" id="className" />
            <span class="text-danger" asp-validation-for="ClassNames"></span>
        </div>

        <div class="mb-3">
            <label class="form-label">Start Date</label>
            <input type="date" class="form-control" asp-for="StartDate" id="startDate" />
            <span class="text-danger" asp-validation-for="StartDate"></span>
        </div>

        <div class="mb-3">
            <label class="form-label">End Date</label>
            <input type="date" class="form-control" asp-for="EndDate" id="endDate" />
            <span class="text-danger" asp-validation-for="EndDate"></span>
        </div>

        <button type="submit" class="btn btn-success">Update</button>
    </form>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
