<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - RKU</title>
    <link rel="icon" type="image/png" href="~/Images/SiteAssests/rku.png" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/style.css" />
    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons"
          rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
</head>
<body>

    <!-- Toggle Button for Sidebar -->
    <button class="burger-menu d-md-none">
        <i class="fas fa-bars"></i>
    </button>

    <div class="container-fluid p-0">
        <div class="row g-0">
            <!-- Sidebar -->
            <nav class="col-auto sidebar">
                <div class="logo">
                    <img src="~/Images/SiteAssets/rku.png" class="logo-img" alt="Logo" />
                </div>
                <div class="nav-links d-flex flex-column">
                    <a asp-area="" asp-controller="Admin" asp-action="Index" title="Dashboard" class="nav-button">
                        <i class="fas fa-home"></i>
                    </a>
                    <a asp-area="" asp-controller="Admin" asp-action="Users" title="Students" class="nav-button">
                        <i class="fa-solid fa-people-group"></i>
                    </a>
                    <a asp-area="" asp-controller="Faculty" asp-action="Index" title="Faculties" class="nav-button">
                        <i class="fa-solid fa-people-group"></i>
                    </a>
                    <a href="Calender.html" class="nav-button">
                        <i class="fas fa-calendar-alt"></i>
                    </a>
                    <a href="Announcements.html" class="nav-button">
                        <i class="fas fa-comment-dots"></i>
                    </a>
                    <form asp-controller="Auth" asp-action="Logout" method="post" class="d-inline">
                        <button type="submit" class="nav-button">
                            <i class="fa fa-sign-out-alt"></i>
                        </button>
                    </form>
                </div>
                <a href="UserAccount.html">
                    <div class="user-avatar-nav"></div>
                </a>
            </nav>

            <!-- Main Content -->
            <main role="main" class="col pb-3">
                @RenderBody()
            </main>
        </div>
    </div>

    <!-- JavaScript for Sidebar Toggle -->
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const burgerMenu = document.querySelector(".burger-menu");
            const sidebar = document.querySelector(".sidebar");

            burgerMenu.addEventListener("click", function () {
                sidebar.classList.toggle("active");
                burgerMenu.style.display = sidebar.classList.contains("active") ? "none" : "block";
            });

            document.addEventListener("click", function (e) {
                if (!sidebar.contains(e.target) && !burgerMenu.contains(e.target)) {
                    sidebar.classList.remove("active");
                    burgerMenu.style.display = "block";
                }
            });
        });
    </script>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/aspnetmvc/jquery.validate.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/aspnetmvc/jquery.validate.unobtrusive.min.js"></script>
    <!-- Add inside <head> -->
    <link rel="stylesheet" href="https://cdn.datatables.net/1.11.5/css/jquery.dataTables.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css">
    <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
