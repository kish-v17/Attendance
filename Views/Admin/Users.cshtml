@model List<UserModel>
@{
	ViewData["Title"] = "Users";
}
<div class="main-content">
		<div class="row py-3">
			<div class="col-6">
				<h1>Users</h1>
			</div>
			<div class="col-6 text-end">
				<a asp-controller="Admin" asp-action="AddUser" class="btn btn-primary"><i class="bi bi-plus-circle me-2"></i>Add New User</a>
			</div>
		</div>
		<table class="table table-bordered table-responsive table-striped">
			<tr class="text-center">
				<th>SR No</th>
				<th>Name</th>
				<th>Email</th>
				<th>Role</th>
				<th>Edit</th>
				<th>Delete</th>
			</tr>
			@{
				int a = 1;
			}
			@foreach (var obj in Model)
			{
				<tr class="text-center">
					<td>@a</td>
					<td>@obj.Fullname</td>
					<td>@obj.Email</td>
					<td>@obj.Role</td>
					<td>
						<div class="btn-group" role="group">
							<a asp-controller="Admin" asp-action="EditUser" asp-route-id="@obj.UserId" class="btn btn-primary mx-2">
								<i class="bi bi-pencil-square"></i>Edit
							</a>
						</div>
					</td>
					<td>
						<form asp-action="DeleteUser" asp-controller="Admin" method="post" onsubmit="return confirm('Are you sure you want to delete this student?');" style="display:inline;">
							<input type="hidden" name="id" value="@obj.UserId" />
							<button type="submit" class="btn btn-danger mx-2 @{if(obj.Email=="kish.v07@gmail.com")} disabled">
								<i class="bi bi-trash-fill"></i> Delete
							</button>
						</form>

					</td>
				</tr>
				a++;
			}

		</table>
</div>